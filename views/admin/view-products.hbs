<section >
    <div class="container">
        <div class="row">
          <a href="/admin/add-product/" class="btn btn-success ml-auto m-5">Add product</a>

        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">title</th>
      <th scope="col">catagory</th>
      <th scope="col">discription</th>
      <th scope="col">price</th>
        <th scope="col">images</th>
        <th scope="col">options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.title}}</td>
      <td>{{this.discription}}</td>
      <td>{{this.price  }}</td>
       <td><img style="width: 50px; height:50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
       <td>
         <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
         <a href="/admin/product-delete/{{this._id}}" class="btn btn-danger"  onclick=" return confirm('are you sure to delete : {{this.name}}')">Delete</a>
        
         </td>
        
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>



